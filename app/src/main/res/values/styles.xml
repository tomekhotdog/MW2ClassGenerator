<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MajorTitle" parent="Title">
        <item name="android:textSize">@dimen/major_title_size</item>
    </style>

    <style name="Heading" parent="Title">
        <item name="android:textSize">@dimen/heading_size</item>
    </style>

    <style name="SubHeading" parent="Title">
        <item name="android:textSize">@dimen/major_text</item>
    </style>


</resources>
